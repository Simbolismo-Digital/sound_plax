                audioPlayer: new Audio()
            };
            channel.audioPlayer.onended = () => {
                if (channel.audioBuffer.length) play(channel);
            };
            users[user] = channel;
            return channel;
        }
    }
    // unconditional play
    const play = (channel) => {
        console.log(channel);
        channel.audioPlayer.src = `data:audio/webm;base64,${channel.audioBuffer.shift()}`;
        channel.audioPlayer.play();
    }
